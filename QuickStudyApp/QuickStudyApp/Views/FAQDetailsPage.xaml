<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickStudyApp.Views.FAQDetailsPage"
             Title="Question">

    <ScrollView>
        <StackLayout Margin="20">
            <!--<Label Text="{Binding Question}"
                   HorizontalOptions="Center"
                   Style="{DynamicResource TitleStyle}"/>-->
            <Label x:Name="questionLabel"
                   FontSize="22"
                   FontAttributes="Bold"
                   Text="Coworking Space"
                   TextColor="{StaticResource Primary}"/>
            <Label x:Name="detailsLabel"
                   Text="Details of question here"
                   Margin="0,50,0,0"
                   TextColor="Black"
                   />
            <Entry x:Name="questionEntry"></Entry>
            <Button Text="Update"
                    x:Name="updateButton"
                    Clicked="updateButton_Clicked"></Button>
            <Button Text="Delete"
                    x:Name="deleteButton"
                    Clicked="deleteButton_Clicked"></Button>
            
            
            <!--<Button Text="Leave Feedback">
                
            </Button>-->
        </StackLayout>
    </ScrollView>
</ContentPage>