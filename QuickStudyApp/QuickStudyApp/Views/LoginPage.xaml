<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="QuickStudyApp.Views.LoginPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center" Margin="0,100,0, 0">
            <Entry x:Name="emailEntry"
                   Text="{}"
                   Placeholder="Student ID"
                   Keyboard="Numeric"
                   TextColor="Black">
                
            </Entry>
                   
            <Button VerticalOptions="Center" Text="Login" Command="{Binding LoginCommand}" Margin="100,50,100,50"
                    CornerRadius="40"
                    WidthRequest="100"
                    HeightRequest="50" />

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>